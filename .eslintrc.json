{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "semi": "error",
    "no-undef": "warn",
    "linebreak-style": "off",
    "no-unused-vars": "error",
    "prettier/prettier": "error",
    "no-use-before-define": "error",
    "newline-before-return": "error"
  }
}
